{
  "manifest_version": 3,
  "name": "iCloud Calendar URL Extractor",
  "version": "1.1",
  "description": "Thunderbird用のiCloud CalDAV URLを抽出して表示＆コピーできます。",
  "permissions": [
    "webRequest",
    "storage",
    "clipboardWrite"
  ],
  "host_permissions": [
    "*://*.icloud.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "128": "icon.png"
    }
  },
  "icons": {
    "128": "icon.png"
  }
}
